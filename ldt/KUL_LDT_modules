	export LDT_SRC=$PWD
	export VSC_SYSTEM=genius
	export LDT_ARCH=linux_ifc
	export LDT_SPMD=parallel
	export LDT_FC=mpiifort
	export LDT_CC=mpiicc
	export LDT_JASPER=$EBROOTJASPER
